# ~/.config/wofi/config

[settings]
# Enable or disable the sidebar
show-sidebar = false

# Enable or disable case-sensitive search
case-sensitive = false

# Enable or disable fuzzy search
fuzzy = true

# Position of the wofi window
# center, top, bottom, left, right, top-left, top-right, bottom-left, bottom-right
position = center

# Width and height of the wofi window (in percentage of screen size)
width = 25%
height = 25%

# Theme to use
theme = default

# Hide the input field (for dmenu mode)
hide-input = false

# Set the type of program (normal or dmenu)
type = normal

# Set the number of results to show
show-n = 5

# Padding around the wofi window (in pixels)
padding = 10

# Spacing between entries (in pixels)
spacing = 2

# Enable or disable history
enable-history = true

# custom css
custom-css = ~/.config/wofi/style.css
